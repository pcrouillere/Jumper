<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">

  <servlet>
    <servlet-name>FastSearch</servlet-name>
    <servlet-class>servlets.FastSearch</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FastSearch</servlet-name>
    <url-pattern>/search</url-pattern>
  </servlet-mapping>
  
   <servlet>
    <servlet-name>GetImg</servlet-name>
    <servlet-class>servlets.GetImg</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>GetImg</servlet-name>
    <url-pattern>/image</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>FrontController</servlet-name>
    <servlet-class>framework.FrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FrontController</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
</web-app>